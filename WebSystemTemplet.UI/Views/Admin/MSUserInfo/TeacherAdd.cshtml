@using WebSystemTemplet.Model.Admin
@{
    Layout = "~/Views/Admin/Common/_Layout.cshtml";
}
@*菜单ID*@
<input type="hidden" id="admin-current-menu-id" value="menu-teacherlist" />

<div class="tpl-content-wrapper">
    <div class="row-content am-cf">
        <div class="row">
            <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
                <div class="widget am-cf">
                    <div class="widget-head am-cf">
                        <ol class="am-breadcrumb">
                            <li class="am-icon-home widget-title">
                                首页
                            </li>
                            <li class="widget-title">
                                人员资料管理
                            </li>
                            <li class="widget-title">
                                教职工资料
                            </li>
                            <li class="widget-title">
                                添加资料
                            </li>
                        </ol>
                    </div>
                    <div class="widget-body am-fr">
                        <form id="form-userinfo" class="am-form tpl-form-border-form tpl-form-border-br">
                            <div class="am-form-group">
                                <label for="real-name" class="am-u-sm-3 am-form-label">姓名 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="real-name" name="realName" placeholder="请输入教师真实姓名" required maxlength="20" data-validation-message="请填写教师的真实姓名">
                                    <small class="am-hide"></small>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-name" class="am-u-sm-3 am-form-label">登录帐号 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input ajax-checkname" name="userName" id="user-name" placeholder="请输入登录帐号" required maxlength="30" data-validation-message="请为该教师分配登录帐号">
                                    <small>建议使用教师真实姓名的拼音作为登录帐号</small>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="is-president" class="am-u-sm-3 am-form-label">是否为院长 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <div class="tpl-switch">
                                        <input id="is-president" type="checkbox" value="1" name="isPresident" class="ios-switch bigswitch tpl-switch-btn">
                                        <div class="tpl-switch-btn-view">
                                            <div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="dvUserMajor" class="am-form-group">
                                <label for="user-major" class="am-u-sm-3 am-form-label">所属专业 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <select id="user-major" name="majorId" data-am-selected="{searchBox: 1,maxHeight: 200}" style="display: none;" data-validation-message="请选择该教师所在专业">
                                        <option value="">请选择专业</option>
                                        @{
                                            List<MSDepartmentInfo> departmentList = ViewBag.DepartmentList as List<MSDepartmentInfo>;
                                            if (departmentList != null)
                                            {
                                                foreach (MSDepartmentInfo item in departmentList)
                                                {
                                                    <option value="@item.DepartmentID">@item.DepartmentName</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-major" class="am-u-sm-3 am-form-label">性别 <span class="tpl-form-line-small-title"></span></label>
                                <div class="am-u-sm-9">
                                    <select id="user-gender" name="gender" data-am-selected="{}" style="display: none;" data-validation-message="请选择该教师的性别">
                                        <option value="1">男</option>
                                        <option value="0">女</option>
                                    </select>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-phone" class="am-u-sm-3 am-form-label">手机号 </label>
                                <div class="am-u-sm-9">
                                    <input type="text" name="telePhone" class="tpl-form-input" id="user-phone" placeholder="请输入常用手机号码" pattern="^[1][3,4,5,7,8][0-9]{9}$" data-validation-message="请填写正确的手机号码">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-qq" class="am-u-sm-3 am-form-label">QQ </label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="user-qq" name="qq" placeholder="请输入常用QQ" maxlength="20" pattern="^[1-9][0-9]{4,14}$" data-validation-message="请填写正确的QQ号码">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-email" class="am-u-sm-3 am-form-label">电子邮箱 </label>
                                <div class="am-u-sm-9">
                                    <input type="email" class="tpl-form-input" id="user-email" name="email" placeholder="请输入电子邮箱" data-validation-message="请按正确的邮箱格式填写">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-remark" class="am-u-sm-3 am-form-label">备注 </label>
                                <div class="am-u-sm-9">
                                    <textarea class="" rows="10" id="user-remark" name="remark" placeholder="如有需要，在此填写备注，最多50字" maxlength="50"></textarea>
                                </div>
                            </div>

                            <div class="am-form-group">
                                <div class="am-u-sm-9 am-u-sm-push-3">
                                    <button id="btnSave" type="button" onclick="window.location.href = '/MSUserInfo/TeacherList';" class="am-btn am-btn-default tpl-btn-bg-color-success">取消</button>
                                    <button id="btnCancel" type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success am-margin-left-lg">保存</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#is-president').click(function () {
            if ($(this).prop('checked')) {
                $('#user-major').val('').addClass('not-validate').focusout().selected('destroy').selected();
                $('#dvUserMajor').hide();
            } else {
                $('#dvUserMajor').show();
                $('#user-major').removeClass('not-validate').focusout()
            }
        });
        $('#form-userinfo').validator({
            ignore: '.not-validate',
            //keyboardEvents: 'focusout, change',
            onValid: function (validity) {
                $(validity.field).nextAll('.am-alert').hide();
            },
            validate: function (validity) {
                // 处理select
                var n = $(validity.field)[0].nodeName;
                var v = $(validity.field).val();
                if (n == "SELECT" && v == "") {
                    validity.valid = false;
                }

                if ($(validity.field).is('.ajax-checkname')) {
                    if (v) {
                        // 异步操作必须返回 Deferred 对象
                        return $.ajax({
                            url: '/MSUserInfo/CheckNameUseful?userName=' + v,
                            cache: false, //实际使用中请禁用缓存
                            dataType: 'json',
                            method: 'GET',
                        }).then(function (data) {
                            $(validity.field).data('validationMessage', '账号已存在，试试 ' + v + '1，' + v + '2');
                            validity.valid = (data.Message == "OK");
                            return validity;
                        }, function () {
                            return validity;
                        });
                    } else {
                        $(validity.field).data('validationMessage', '请为该教师分配登录帐号');
                    }

                }

                return validity;
            },
            onInValid: function (validity) {
                var $field = $(validity.field);
                var $group = $field.closest('.am-form-group>div');
                var $alert = $group.find('.am-alert');
                // 使用自定义的提示信息 或 插件内置的提示信息
                var msg = $field.data('validationMessage') || this.getValidationMessage(validity);

                if (!$alert.length) {
                    $alert = $('<div class="am-alert am-alert-danger"></div>').hide().
                    appendTo($group);
                }
                $alert.html(msg).show();
            },
            submit: function (e) {
                var formValidity = this.isFormValid();
                $.when(formValidity).then(function () {
                    $.post('/MSUserInfo/AddTeacherCallBack', $('#form-userinfo').serialize(), function (data) {
                        if (data.Message == 'OK') {
                            alert('添加成功！');
                            window.location.href = '/MSUserInfo/TeacherList';
                        } else {
                            alert(data.Message);
                        }
                    })
                }, function () {
                });
                // 禁止表单提交
                return false;
            },
        });
    })
</script>