@{
    Layout = "~/Views/Admin/Common/_Layout.cshtml";
}
@*菜单ID*@
<input type="hidden" id="admin-current-menu-id" value="menu-teacherlist" />

<div class="tpl-content-wrapper">
    <div class="row-content am-cf">
        <div class="row">
            <div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
                <div class="widget am-cf">
                    <div class="widget-head am-cf">
                        <ol class="am-breadcrumb">
                            <li class="am-icon-home widget-title">
                                首页
                            </li>
                            <li class="widget-title">
                                人员资料管理
                            </li>
                            <li class="widget-title">
                                教职工资料
                            </li>
                            <li class="widget-title">
                                添加资料
                            </li>
                        </ol>
                    </div>
                    <div class="widget-body am-fr">
                        <form class="am-form tpl-form-border-form tpl-form-border-br" data-am-validator>
                            <div class="am-form-group">
                                <label for="real-name" class="am-u-sm-3 am-form-label">姓名 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="real-name" placeholder="请输入教师真实姓名" required>
                                    <small class="am-hide"></small>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-name" class="am-u-sm-3 am-form-label">登录帐号 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="user-name" placeholder="请输入登录帐号" required>
                                    <small>建议使用教师真实姓名的拼音作为登录帐号</small>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="is-president" class="am-u-sm-3 am-form-label">是否为院长 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <div class="tpl-switch">
                                        <input id="is-president" type="checkbox" class="ios-switch bigswitch tpl-switch-btn">
                                        <div class="tpl-switch-btn-view">
                                            <div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="dvUserMajor" class="am-form-group">
                                <label for="user-major" class="am-u-sm-3 am-form-label">所属专业 <span class="tpl-form-line-small-title"> (必填)</span></label>
                                <div class="am-u-sm-9">
                                    <select id="user-major" data-am-selected="{searchBox: 1}" style="display: none;" required>
                                        <option value="-1">请选择专业</option>
                                        <option value="b">夕风色</option>
                                        <option value="o">Orange</option>
                                    </select>
                                </div>
                            </div>

                            <div class="am-form-group">
                                <label for="icon-url" class="am-u-sm-3 am-form-label">头像 </label>
                                <div class="am-u-sm-9">
                                    <div class="am-form-group am-form-file">
                                        <div class="tpl-form-file-img">
                                            <img id="icon-url" src="assets/img/a5.png" alt="">
                                        </div>
                                        <button id="upload-icon-url" type="button" class="am-btn am-btn-danger am-btn-sm">
                                            <i class="am-icon-cloud-upload"></i> 上传本地图片
                                        </button>
                                        <input id="doc-form-file" type="file" multiple="">
                                    </div>
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-phone" class="am-u-sm-3 am-form-label">手机号 </label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="user-phone" placeholder="请输入常用手机号码" pattern="^\d+$">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-qq" class="am-u-sm-3 am-form-label">QQ </label>
                                <div class="am-u-sm-9">
                                    <input type="text" class="tpl-form-input" id="user-qq" placeholder="请输入常用QQ">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-email" class="am-u-sm-3 am-form-label">电子邮箱 </label>
                                <div class="am-u-sm-9">
                                    <input type="email" class="tpl-form-input" id="user-email" placeholder="请输入电子邮箱">
                                </div>
                            </div>
                            <div class="am-form-group">
                                <label for="user-remark" class="am-u-sm-3 am-form-label">备注 </label>
                                <div class="am-u-sm-9">
                                    <textarea class="" rows="10" id="user-remark" placeholder="如有需要，在此填写备注"></textarea>
                                </div>
                            </div>

                            <div class="am-form-group">
                                <div class="am-u-sm-9 am-u-sm-push-3">
                                    <button id="btnSave" type="button" class="am-btn am-btn-default tpl-btn-bg-color-success">取消</button>
                                    <button id="btnCancel" type="submit" class="am-btn am-btn-primary tpl-btn-bg-color-success am-margin-left-lg">保存</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#is-president').click(function () {
            if ($(this).prop('checked')) {
                $('#user-major').val('-1').selected('destroy').selected();
                $('#dvUserMajor').hide();
            } else {
                $('#dvUserMajor').show();
            }
        })
    })
</script>